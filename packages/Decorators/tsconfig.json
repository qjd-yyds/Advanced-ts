{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["esnext"],
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "isolatedModules": false,
  },
  "include": [
    "src",
  ]
}